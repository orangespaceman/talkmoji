{
  // CSS/JS Lint
  "eslint.enable": true,
  "stylelint.enable": true,
  "css.validate": true,

  // Prettier - set default
  "editor.formatOnSave": false,

  // Prettier - enable per-language
  "[javascript]": {
    "editor.formatOnSave": true
  },
  "[css]": {
    "editor.formatOnSave": true
  },

  // ESlint - custom config
  "eslint.options": {
    "configFile": "eslint.config.js"
  }
}

